@using Notifications.Entities.Models
@model IEnumerable<Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Order Details
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalWithTax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>Order ID: @item.OrderID<br />
            @foreach (OrderDetail it in item.OrderDetails)
            {
                <ul>

                    <li>@it.MenuItemID</li>
                    <li>@it.Quantity</li>
                    <li>@it.UnitPrice</li>
                </ul>
            }
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalWithTax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.ActionLink("Complete", "complete", new { id=item.OrderID }) |
            @Html.ActionLink("Cancel", "cancel", new { id=item.OrderID }) |
            
        </td>
    </tr>
}

</table>
